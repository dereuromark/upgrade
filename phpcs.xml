<?xml version="1.0"?>
<ruleset name="upgrade">
	<config name="installed_paths" value="vendor/spryker/code-sniffer/Spryker"/>

	<arg value="nps"/>

	<file>config/</file>
	<file>src/</file>
	<file>tests/</file>

	<exclude-pattern>*/tests/test_files/*</exclude-pattern>
	<exclude-pattern>src/Rector/</exclude-pattern>
	<exclude-pattern>tests/test_apps/</exclude-pattern>
	<exclude-pattern>tests/TestCase/Rector/</exclude-pattern>

	<rule ref="Spryker"/>
</ruleset>
